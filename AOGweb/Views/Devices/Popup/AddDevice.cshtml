@Html.AntiForgeryToken()
<div class="form-popup" id="addForm">
    <div class="form-popup-content">
        <span class="close" onclick="addDevicePopupClose()">&times;</span>
        <div class="form-popup-body">
            <center>
                <label class="little-title">Add a device</label>
            </center>
            <div class="form-group">
                Device ID: <input id="adDeviceID" class="form-control" placeholder="ID" required autofocus />
                <label id="adLabelErrorID" class="text-danger"></label>
            </div>
            <div class="form-group">
                Device Name: <input class="form-control" id="adName" placeholder="Name" required />
                <label id="adLabelErrorName" class="text-danger"></label>
            </div>
            <div class="form-group">
                Device Room:
                <input id="adRoom" class="form-control" list="roomList" placeholder="Room" required />
                <datalist id="roomList" @*class="border-box"*@>
                    @foreach (var room in TempData["rooms"] as List<string>)
                    {
                        <option value="@room"></option>
                    }
                </datalist>
                <label id="adLabelErrorRoom" class="text-danger"></label>
            </div>
            <button class="btn btn-primary" onclick="addDeviceClick()">Add</button>
        </div>
    </div>
</div>