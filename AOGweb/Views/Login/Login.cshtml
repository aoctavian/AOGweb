@model UserLogIn

@{
    ViewData["Title"] = "Log In";
}

<center style="margin-top: -50px">
    <label class="title">@ViewData["Title"]</label>
    <hr />
</center>
<div class="row">
    <div class="panel-form box-shadow">
        <h3>Use your account to log in.</h3>
        <form asp-action="Login" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <br />
                <input type="checkbox" onclick="togglePasswordVisibility()">Show Password
                <input id="inputPwd" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input type="submit" value="Log In" class="btn btn-primary" />
            <br /><br />
            <a asp-action="Index" asp-controller="Register" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]">Register as a new user</a>
        </form>
    </div>
</div>
