<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <nav class="navbar bg-light border-bottom box-shadow">
            <div class="container">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        Hello,
                    </li>
                    <li class="nav-item">
                        <button class="nav-link nav-btn bg-light text-blue"> @User.Claims.Where(c => c.Type == "FirstName").Select(c => c.Value).Single() <span class="caret" /></button>
                        <div class="dropdown-content box-shadow">
                            <a asp-controller="Account" asp-action="Index">Account</a>
                        </div>
                    </li>
                    <li class="nav-item-center">
                        <a class="nav-link text-dark" asp-controller="Devices" asp-action="Index">Devices</a>
                    </li>
                    <li class="nav-item nav-item-right">
                        <a class="nav-link text-blue" asp-controller="Login" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("scripts", required: false)


    <div class="container">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 Ewss - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>
